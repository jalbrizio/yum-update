[ -x /usr/bin/hal-set-property ] || exit 0
[ -x /usr/bin/vmmouse_detect ] || exit 0

/usr/bin/vmmouse_detect
if [ $? -eq 0 ]; then
   /usr/bin/hal-set-property --direct --udi "$UDI" --key input.x11_driver --string "vmmouse"
fi

